<Window x:Class="VehicleInspectionInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Inspection Manager" Height="300" Width="600">
    <Grid x:Name="MainGrid" Background="BurlyWood">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Главное меню" FontWeight="Bold" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Добавить авто" Margin="10" Padding="3" HorizontalAlignment="Stretch" Click="AddCar_Click"/>
            <Button Content="Список авто" Margin="10" Padding="3" HorizontalAlignment="Stretch" Click="CarList_Click"/>
        </StackPanel>
    </Grid>
</Window>
